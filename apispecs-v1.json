{
    "openapi": "3.0.2",
    "info": {
        "title": "Category RESTful API",
        "version": "1.0"
    },
    "components": {
        "schemas": {
            "CategoryResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes" : {
            "Auth" : {
                "type": "apiKey",
                "in": "header",
                "name": "X-API-Key",
                "description": "Authentication for login"
            }
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api"
        }
    ],
    "paths": {
        "/categories": {
            "get": {
                "security": [{
                    "Auth":[]
                }],
                "responses": {
                    "200": {
                        "description": "success all categories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/CategoryResponse"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [{
                    "Auth":[]
                }],
                "description": "create new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success create new category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/CategoryResponse"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "security": [{
                    "Auth":[]
                }],
                "description": "update category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CategoryResponse"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success create new category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/CategoryResponse"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "security": [{
                    "Auth":[]
                }],
                "description": "delete category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success dekete category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/{categoryId}": {
            "get": {
                "security": [{
                    "Auth":[]
                }],
                "description": "Get category by id",
                "parameters": [
                    {
                        "required": true,
                        "name": "categoryId",
                        "in": "path",
                        "description": "category id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success get category by id",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/CategoryResponse"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}